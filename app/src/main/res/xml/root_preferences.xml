<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Manual Connect">

        <SwitchPreferenceCompat
            app:key="manual"
            app:title="Enable Manual Connection"
            app:defaultValue="false"/>

        <EditTextPreference
            app:defaultValue="192.168.10.99"
            app:dependency="manual"
            app:key="IP"
            app:title="IP Address"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:defaultValue="9999"
            app:dependency="manual"
            app:key="port"
            app:title="Port"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="1"
            app:dependency="manual"
            app:key="ID"
            app:title="Partner ID"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="1"
            app:dependency="manual"
            app:key="password"
            app:title="Partner Password"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>

    <PreferenceCategory app:title="Theme">

        <SwitchPreferenceCompat
            app:key="sync"
            app:summaryOff="Dark Theme"
            app:summaryOn="Light Theme"
            app:title="@string/sync_title" />


    </PreferenceCategory>

</PreferenceScreen>