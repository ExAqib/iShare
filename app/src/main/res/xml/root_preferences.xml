<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Manual Connect">

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="manual"
            app:title="Enable Manual Connection" />

        <EditTextPreference
            app:defaultValue="192.168.10.99"
            app:dependency="manual"
            app:key="IP"
            app:title="IP Address"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:defaultValue="9999"
            app:dependency="manual"
            app:key="port"
            app:title="Port"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="1"
            app:dependency="manual"
            app:key="ID"
            app:title="Partner ID"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="1"
            app:dependency="manual"
            app:key="password"
            app:title="Partner Password"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>

    <PreferenceCategory app:title="Theme">

        <ListPreference
            android:defaultValue="system"
            app:defaultValue="system"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:key="theme"
            app:title="Change App Theme"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="App"
        app:title="App Support">
        <EditTextPreference
            app:defaultValue=""
            app:dialogMessage="Enter Your Feedback Details:"
            app:enabled="true"
            app:key="feedback"
            app:summary="Report technical issues or suggest new features"
            app:title="Send feedback" />

        <Preference
            android:title="Check for Updates"
            app:key="update"
            app:summary="get the the last released version" />
    </PreferenceCategory>

</PreferenceScreen>