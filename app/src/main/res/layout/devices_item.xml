<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_deviceItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/li_deviceItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="?selectableItemBackground"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_device"
                android:layout_width="36dp"
                android:layout_height="36dp"

                android:layout_margin="3dp"
                android:src="@drawable/ic_baseline_devices_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:contentDescription="Folder Icon"
                tools:src="@drawable/ic_baseline_devices_24" />

            <TextView
                android:id="@+id/tv_deviceName"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_margin="3dp"
                app:layout_constraintStart_toEndOf="@+id/img_device"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Device Name" />


        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>