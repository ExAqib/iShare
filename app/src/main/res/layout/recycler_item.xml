<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="4dp">

    <ImageView
        android:id="@+id/rcv_img"
        android:layout_width="36dp"
        android:layout_height="36dp"

        android:layout_margin="3dp"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        tools:contentDescription="Folder Icon"
        tools:src="@drawable/ic_baseline_folder_24" />

    <TextView
        android:id="@+id/tv_directory_name"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_margin="3dp"
        app:layout_constraintStart_toEndOf="@+id/rcv_img"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Document" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@color/cardview_shadow_start_color"
        app:layout_constraintTop_toBottomOf="@+id/tv_directory_name" />

</androidx.constraintlayout.widget.ConstraintLayout>