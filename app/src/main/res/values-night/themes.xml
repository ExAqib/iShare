<resources>
    <!-- Base application theme. -->
    <!--
        <style name="Theme.iShare" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    -->
    <style name="Theme.iShare" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/light_primary</item>
        <item name="colorOnPrimary">@color/dark_primary</item>
        <item name="colorControlNormal">@color/text_secondary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/surface</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:overScrollMode">never</item>
    </style>


</resources>