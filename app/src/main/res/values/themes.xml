<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--
        <style name="Theme.iShare" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    -->
    <style name="Theme.iShare" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/surface</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/surface</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:overScrollMode">never</item>
    </style>
</resources>